#jogo da forca, um jogo a onde um jogador escreve uma palavra e outros jogadores irao tentar
#adivinhar a palavra escohida pelo jogador.

def escolher_palavra():
    jogador = input("Digite a palavra secreta: ").lower()
    return jogador

def jogar_forca():
    palavra = escolher_palavra()
    letras_certas = []
    letras_erradas = []
    tentativas_maximas = 5
    
    print("Bem-vindo ao jogo da forca!")
    print("Adivinhe a palavra secreta.")

    while True:
        print("\n")
        for letra in palavra:
            if letra in letras_certas:
                print(letra, end=" ")
            else:
                print("_", end=" ")

        print("\nLetras erradas:", letras_erradas ,tentativas)

        palpite = input("Digite uma letra: ").lower()

        if palpite in letras_certas or palpite in letras_erradas:
            print("Você já tentou essa letra. Tente novamente.")

        elif palpite in palavra:
            letras_certas.append(palpite)

            if len(letras_certas) == len(set(palavra)):
                print("\nParabéns! Você ganhou! A palavra era:", palavra)
                break

        else:
            letras_erradas.append(palpite)

            if len(letras_erradas) == tentativas_maximas:
                print("\nVocê perdeu! A palavra era:", palavra)
                break

jogar_forca()
